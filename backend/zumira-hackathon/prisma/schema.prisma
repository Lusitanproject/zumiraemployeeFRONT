generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Operation {
  SUM
  AVERAGE
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String
  occupation    String?
  birthdate     DateTime?
  gender        String?
  nationalityId String?   @map("nationality_id")
  roleId        String    @map("role_id")
  companyId     String?   @map("company_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  nationality               Nationality?               @relation(fields: [nationalityId], references: [id])
  company                   Company?                   @relation(fields: [companyId], references: [id])
  role                      Role                       @relation(fields: [roleId], references: [id])
  codes                     AuthCode[]
  assessmentResults         AssessmentResult[]
  assessmentQuestionAnswers AssessmentQuestionAnswer[]
  notificationRecipients    NotificationRecipient[]

  @@map("users")
}

model Permission {
  id          String   @id @default(uuid())
  slug        String   @unique
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  rolePermissions RolePermission[]

  @@map("permissions")
}

model Role {
  id        String   @id @default(uuid())
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users           User[]
  rolePermissions RolePermission[]

  @@map("roles")
}

model RolePermission {
  roleId       String   @map("role_id")
  permissionId String   @map("permission_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
  @@map("roles_permissions")
}

model AuthCode {
  id        String   @id @default(uuid())
  code      String
  expiresAt DateTime @map("expires_at")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  @@map("auth_codes")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  email     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users                      User[]
  companyAssessmentFeedbacks CompanyAssessmentFeedback[]

  @@map("companies")
}

model Nationality {
  id        String   @id @default(cuid())
  acronymn  String   @unique
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") // TODO: remove default in next migration

  assessments Assessment[]
  users       User[]

  @@map("nationalities")
}

model Assessment {
  id                          String    @id @default(cuid())
  title                       String
  summary                     String
  description                 String?
  userFeedbackInstructions    String?   @map("user_feedback_instructions")
  companyFeedbackInstructions String?   @map("company_feedback_instructions")
  operationType               Operation @default(AVERAGE) @map("operation_type")
  selfMonitoringBlockId       String    @map("self_monitoring_block_id")
  nationalityId               String    @map("nationality_id")
  createdAt                   DateTime  @default(now()) @map("created_at")
  updatedAt                   DateTime  @updatedAt @map("updated_at")

  selfMonitoringBlock        SelfMonitoringBlock         @relation(fields: [selfMonitoringBlockId], references: [id])
  nationality                Nationality                 @relation(fields: [nationalityId], references: [id])
  assessmentQuestions        AssessmentQuestion[]
  assessmentResults          AssessmentResult[]
  companyAssessmentFeedbacks CompanyAssessmentFeedback[]
  assessmentResultRatings    AssessmentResultRating[]

  @@map("assessments")
}

model AssessmentResult {
  id                       String   @id @default(uuid())
  feedback                 String?
  assessmentResultRatingId String?
  userId                   String   @map("user_id")
  assessmentId             String   @map("assessment_id")
  createdAt                DateTime @default(now()) @map("created_at")
  updatedAt                DateTime @updatedAt @map("updated_at")

  user                      User                       @relation(fields: [userId], references: [id])
  assessment                Assessment                 @relation(fields: [assessmentId], references: [id])
  assessmentResultRating    AssessmentResultRating?    @relation(fields: [assessmentResultRatingId], references: [id])
  assessmentQuestionAnswers AssessmentQuestionAnswer[]
  alerts                    Alert[]

  @@map("assessment_results")
}

model AssessmentResultRating {
  id           String   @unique @default(uuid())
  risk         String   @default("Novo risco") // TODO: REMOVER NA PROXIMA MIGRATION
  profile      String   @default("Novo perfil")
  color        String   @default("#FFFFFF")
  assessmentId String   @map("assessment_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  assessment        Assessment         @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  assessmentResults AssessmentResult[]
  Alerts            Alert[]

  @@map("assessment_result_ratings")
}

model AssessmentQuestion {
  id                       String   @id @default(uuid())
  description              String
  index                    Int
  assessmentId             String   @map("assessment_id")
  psychologicalDimensionId String   @map("psychological_dimension_id")
  createdAt                DateTime @default(now()) @map("created_at")
  updatedAt                DateTime @updatedAt @map("updated_at")

  assessment                Assessment                 @relation(fields: [assessmentId], references: [id])
  psychologicalDimension    PsychologicalDimension     @relation(fields: [psychologicalDimensionId], references: [id])
  assessmentQuestionAnswers AssessmentQuestionAnswer[]
  assessmentQuestionChoices AssessmentQuestionChoice[]

  @@map("assessment_questions")
}

model AssessmentQuestionAnswer {
  id                         String   @id @default(uuid())
  assessmentQuestionId       String   @map("assessment_question_id")
  assessmentQuestionChoiceId String   @map("assessment_question_choice_id")
  assessmentResultId         String   @map("assessment_result_id")
  userId                     String   @map("user_id")
  createdAt                  DateTime @default(now()) @map("created_at")
  updatedAt                  DateTime @updatedAt @map("updated_at")

  assessmentQuestion       AssessmentQuestion       @relation(fields: [assessmentQuestionId], references: [id], onDelete: Cascade)
  assessmentQuestionChoice AssessmentQuestionChoice @relation(fields: [assessmentQuestionChoiceId], references: [id], onDelete: Cascade)
  assessmentResult         AssessmentResult         @relation(fields: [assessmentResultId], references: [id])
  user                     User                     @relation(fields: [userId], references: [id])

  @@map("assessment_question_answers")
}

model AssessmentQuestionChoice {
  id                   String   @id @default(uuid())
  label                String
  value                Float
  index                Int
  assessmentQuestionId String   @map("assessment_question_id")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  assessmentQuestion        AssessmentQuestion         @relation(fields: [assessmentQuestionId], references: [id], onDelete: Cascade)
  assessmentQuestionAnswers AssessmentQuestionAnswer[]

  @@map("assessment_question_choices")
}

model SelfMonitoringBlock {
  id        String   @id @default(cuid())
  title     String
  summary   String?
  icon      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  assessments             Assessment[]
  psychologicalDimensions PsychologicalDimension[]

  @@map("self_monitoring_blocks")
}

model PsychologicalDimension {
  id                    String   @id @default(uuid())
  acronym               String
  name                  String
  selfMonitoringBlockId String   @map("self_monitoring_block_id")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  selfMonitoringBlock SelfMonitoringBlock  @relation(fields: [selfMonitoringBlockId], references: [id])
  assessmentQuestions AssessmentQuestion[]

  @@map("psychological_dimensions")
}

model CompanyAssessmentFeedback {
  id           String   @id @default(uuid())
  text         String
  companyId    String   @map("company_id")
  assessmentId String   @map("assessment_id")
  respondents  Int
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  company    Company    @relation(fields: [companyId], references: [id])
  assessment Assessment @relation(fields: [assessmentId], references: [id])

  @@map("company_assessment_feedback")
}

model Notification {
  id                 String   @id @default(cuid())
  title              String
  summary            String
  content            String
  notificationTypeId String   @map("notification_type_id")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  notificationType       NotificationType        @relation(fields: [notificationTypeId], references: [id])
  notificationRecipients NotificationRecipient[]

  @@map("notifications")
}

model NotificationType {
  id        String   @id @default(cuid())
  name      String
  priority  Int
  color     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  notifications Notification[]

  @@map("notification_types")
}

model NotificationRecipient {
  userId         String   @map("user_id")
  notificationId String   @map("notification_id")
  read           Boolean  @default(false)
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  user         User         @relation(fields: [userId], references: [id])
  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)

  @@unique([userId, notificationId])
  @@map("notification_recipients")
}

model Alert {
  id                       String   @unique @default(uuid())
  assessmentResultId       String   @map("assessment_result_id")
  assessmentResultRatingId String   @map("assessment_result_rating_id")
  createdAt                DateTime @default(now()) @map("created_at")
  updatedAt                DateTime @updatedAt @map("updated_at")

  assessmentResult       AssessmentResult       @relation(fields: [assessmentResultId], references: [id], onDelete: Cascade)
  assessmentResultRating AssessmentResultRating @relation(fields: [assessmentResultRatingId], references: [id], onDelete: Cascade)

  @@map("alerts")
}
